<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffff0000"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <EditText
        android:id="@+id/TeamBname"
        android:layout_width="800.0dip"
        android:layout_height="wrap_content"
        android:layout_above="@+id/next1"
        android:layout_alignLeft="@+id/TeamAname"
        android:layout_marginBottom="36.0dip"
        android:background="@drawable/background"
        android:ems="20"
        android:gravity="center"
        android:hint="Give a Name for your team"
        android:inputType="textCapCharacters"
        android:singleLine="true"
        android:textSize="30.0dip" />

    <EditText
        android:id="@+id/TeamAname"
        android:layout_width="800.0dip"
        android:layout_height="wrap_content"
        android:layout_above="@+id/customer_Teamlabel2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75.0dip"
        android:background="@drawable/background"
        android:ems="20"
        android:gravity="center"
        android:hint="Give a Name for your team"
        android:inputType="textCapCharacters"
        android:singleLine="true"
        android:textSize="30.0dip">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/customer_Teamlabel2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TeamBname"
        android:layout_alignLeft="@+id/customer_Teamlabel1"
        android:layout_marginBottom="25.0dip"
        android:gravity="center"
        android:text="Enter a name for Team B"
        android:textColor="#ffffffff"
        android:textSize="40.0dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/customer_Teamlabel1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TeamAname"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25.0dip"
        android:gravity="center"
        android:text="Enter a name for Team A "
        android:textColor="#ffffffff"
        android:textSize="40.0dip"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/next1"
        android:layout_width="150.0dip"
        android:layout_height="80.0dip"
        android:layout_alignRight="@+id/TeamBname"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="68.0dip"
        android:src="@drawable/next1" />
</RelativeLayout>
